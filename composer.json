{
    "name": "laravel-hyperf/router",
    "type": "library",
    "description": "The router package for Laravel Hyperf.",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "router",
        "swoole",
        "laravel-hyperf"
    ],
    "authors": [
        {
            "name": "Albert Chen",
            "email": "albert@laravel-hyperf.com"
        }
    ],
    "support": {
        "issues": "https://github.com/laravel-hyperf/components/issues",
        "source": "https://github.com/laravel-hyperf/components"
    },
    "autoload": {
        "psr-4": {
            "LaravelHyperf\\Router\\": "src/"
        },
        "files": [
            "src/Functions.php"
        ]
    },
    "require": {
        "php": "^8.2",
        "hyperf/context": "~3.1.0",
        "hyperf/http-server": "~3.1.0",
        "nikic/fast-route": "^1.3.0"
    },
    "suggest": {
        "laravel-hyperf/cache": "Required to use throttle requests middleware.",
        "laravel-hyperf/core": "Required to use throttle requests middleware.",
        "laravel-hyperf/session": "Required to use session based `previous` function in UrlGenerator.",
        "laravel-hyperf/http": "Required to use ValidateSignature middleware."
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "hyperf": {
            "config": "LaravelHyperf\\Router\\ConfigProvider"
        },
        "branch-alias": {
            "dev-main": "0.1-dev"
        }
    }
}
